@model BookstoreCustomer.Models.Book
@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Books")">Books</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="bg-light p-5 mb-3">
                        <i class="bi bi-book" style="font-size: 8rem;"></i>
                    </div>
                    <span class="badge bg-info text-dark mb-2">@Model.Category</span>
                    @if (Model.Stock > 0)
                    {
                        <span class="badge bg-success mb-2">In Stock (@Model.Stock available)</span>
                    }
                    else
                    {
                        <span class="badge bg-danger mb-2">Out of Stock</span>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <h4 class="text-muted mb-3">by @Model.Author</h4>
            
            <div class="mb-4">
                <h2 class="text-primary">$@Model.Price.ToString("F2")</h2>
            </div>

            <div class="mb-4">
                <h5>Description</h5>
                <p>@Model.Description</p>
            </div>

            <div class="mb-4">
                <h5>Book Details</h5>
                <table class="table table-sm">
                    <tbody>
                        <tr>
                            <th>ISBN:</th>
                            <td>@Model.ISBN</td>
                        </tr>
                        <tr>
                            <th>Published:</th>
                            <td>@Model.PublishedDate.ToString("MMMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <th>Category:</th>
                            <td>@Model.Category</td>
                        </tr>
                        <tr>
                            <th>Availability:</th>
                            <td>
                                @if (Model.Stock > 0)
                                {
                                    <span class="text-success">In Stock (@Model.Stock available)</span>
                                }
                                else
                                {
                                    <span class="text-danger">Out of Stock</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-grid gap-2 d-md-block">
                @if (Model.Stock > 0)
                {
                    <button class="btn btn-primary btn-lg" disabled>Add to Cart (Coming Soon)</button>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>Out of Stock</button>
                }
                <a href="@Url.Action("Index", "Books")" class="btn btn-outline-secondary btn-lg">Back to Books</a>
            </div>
        </div>
    </div>
</div>
